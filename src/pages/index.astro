---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured articles for homepage
const allArticles = await getCollection('articles');
const featuredArticles = allArticles
  .filter(article => article.data.featured)
  .slice(0, 3);

// Get latest articles if no featured articles
const latestArticles = featuredArticles.length > 0 
  ? featuredArticles 
  : allArticles.slice(0, 3);
---

<BaseLayout 
  title="SizeGenetics - Clinically Proven Male Enhancement Device"
  description="Discover the #1 clinically proven male enhancement device. Safe, effective, and permanent results with SizeGenetics. Trusted by thousands of men worldwide."
  keyword="male enhancement device, penis enlargement, sizegenetics"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        
        <!-- Hero Content -->
        <div class="space-y-8">
          <div class="space-y-4">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
              Clinically Proven
              <span class="text-blue-600">Male Enhancement</span>
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed">
              The #1 doctor-recommended traction device for safe, effective, and permanent male enhancement. 
              Backed by clinical studies and trusted by thousands of men worldwide.
            </p>
          </div>

          <!-- Key Benefits -->
          <div class="grid grid-cols-2 gap-4">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="text-gray-700 font-medium">Clinically Proven</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="text-gray-700 font-medium">100% Safe</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="text-gray-700 font-medium">Permanent Results</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="text-gray-700 font-medium">Discreet & Private</span>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
            <a 
              href="/products/sizegenetics-device" 
              class="bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors text-center"
            >
              Shop SizeGenetics
            </a>
            <a 
              href="/how-it-works" 
              class="border-2 border-blue-600 text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-50 transition-colors text-center"
            >
              Learn How It Works
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="bg-white rounded-2xl shadow-2xl p-8">
            <div class="aspect-square bg-gradient-to-br from-blue-100 to-indigo-200 rounded-xl flex items-center justify-center">
              <div class="text-center space-y-4">
                <div class="w-24 h-24 bg-blue-600 rounded-full mx-auto flex items-center justify-center">
                  <span class="text-white text-2xl font-bold">SG</span>
                </div>
                <p class="text-gray-600 font-medium">SizeGenetics Device</p>
                <p class="text-sm text-gray-500">Clinically Proven Technology</p>
              </div>
            </div>
          </div>
          
          <!-- Floating Stats -->
          <div class="absolute -top-4 -right-4 bg-white rounded-lg shadow-lg p-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-blue-600">98%</div>
              <div class="text-xs text-gray-600">Success Rate</div>
            </div>
          </div>
          
          <div class="absolute -bottom-4 -left-4 bg-white rounded-lg shadow-lg p-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-green-600">50K+</div>
              <div class="text-xs text-gray-600">Satisfied Users</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-4 mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
          Why Choose SizeGenetics?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          The only male enhancement device with clinical studies proving its safety and effectiveness. 
          Join thousands of men who have achieved their goals with SizeGenetics.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Clinically Proven</h3>
          <p class="text-gray-600">
            Backed by multiple clinical studies and medical research. The only device with published peer-reviewed studies proving its effectiveness.
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">100% Safe</h3>
          <p class="text-gray-600">
            Non-invasive, drug-free approach with no side effects. Medical-grade materials and precision engineering ensure complete safety.
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Permanent Results</h3>
          <p class="text-gray-600">
            Unlike temporary solutions, SizeGenetics provides permanent improvements through natural tissue expansion and cellular growth.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Articles Section -->
  {latestArticles.length > 0 && (
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center space-y-4 mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
            Latest Education & Insights
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Stay informed with our latest articles on male enhancement, safety, and achieving your goals.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {latestArticles.map((article) => (
            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6 space-y-4">
                <div class="flex items-center space-x-2">
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
                    {article.data.type}
                  </span>
                  <span class="text-gray-500 text-sm">
                    {new Date(article.data.generated_at).toLocaleDateString()}
                  </span>
                </div>
                
                <h3 class="text-xl font-semibold text-gray-900 line-clamp-2">
                  {article.data.title}
                </h3>
                
                <p class="text-gray-600 line-clamp-3">
                  {article.data.description}
                </p>
                
                <a 
                  href={`/articles/${article.slug}`}
                  class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
                >
                  Read More
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>

        <div class="text-center mt-12">
          <a 
            href="/education" 
            class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
          >
            View All Articles
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-20 bg-blue-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="space-y-8">
        <h2 class="text-3xl md:text-4xl font-bold text-white">
          Ready to Start Your Enhancement Journey?
        </h2>
        <p class="text-xl text-blue-100">
          Join thousands of men who have achieved their goals with SizeGenetics. 
          Safe, effective, and backed by clinical research.
        </p>
        <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
          <a 
            href="/products/sizegenetics-device" 
            class="bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-colors"
          >
            Shop Now
          </a>
          <a 
            href="/clinical-studies" 
            class="border-2 border-white text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors"
          >
            View Clinical Studies
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

